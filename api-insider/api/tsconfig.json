{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["es6"],
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": ".",
    // "paths": {
    //   "~/*": ["src/*"]
    // }
  },
  "include": ["src/**/*", "typeorm.config.ts"],
  "exclude": ["node_modules"]
}
